# vim
alias vi="nvim"
alias vim="nvim"

# Using a shell alias to prevent accidental nesting
if [ -n "$NVIM_LISTEN_ADDRESS" ]; then
  if [ -x "$(command -v nvr)" ]; then
    alias nvim=nvr
  else
    alias nvim='echo "No nesting!"'
  fi
fi

# lazygit
alias lg="lazygit"